<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZaporArrow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/2d338c0187.js" crossorigin="anonymous"></script>
</head>
<body>
    <div id="sidebar">        
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ZaporArrow</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Arrows" asp-action="Gallery">Gallery</a>
            </li>
        </ul> 
    </div>


    <div id="wrapper">
       <nav>
           <div class="container-fluid header-bar">
               <ul class="nav navbar-nav navbar-left">
                   <li>
                       <button id="sidebarToggle" class="btn btn-primary">
                           <i class="fa fa-angle-left"></i>
                       </button>
                   </li>
               </ul>
           </div>
       </nav>
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>

    </div>
    <footer>
        <div class="nav navbar-inverse">
            &copy; 2019 - ZaporArrow
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
