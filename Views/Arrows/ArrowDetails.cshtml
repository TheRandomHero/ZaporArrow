@model ArrowDto
@{
    ViewData["Title"] = "ArrowDetails";
}

<h1>ArrowDetails</h1>


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>arrowDetails</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@Model.ProfilPicture" asp-append-version="true" />

                <h4>Arrow Lengtg : @Model.Length</h4>
                <h4>Description : @Model.Description</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>